{% extends 'base.html.twig' %}

{% block title %}Task {{ task.id }}{% endblock %}

{% block header %}
    <div id="current-user"></div>
    <div id="title-page">
        <h1>{{ task.title }}</h1>
    </div>
{% endblock %}

{% block content %}

    {{ form_start(form, { attr: { name: 'tache' } }) }}

    <div>
        {{ form_row(form.title, { label_attr: { class: 'required' } }) }}
    </div>
    <div>
        {{ form_row(form.description) }}
    </div>
    <div class="flex-form">
        <div>
            {{ form_row(form.deadline) }}
        </div>
        <div>
            {{ form_row(form.status, { label_attr: { class: 'required' } }) }}
        </div>
    </div>
    <div>
        {{ form_row(form.employee) }}
    </div>
    <br>
    {{ form_row(form.submit) }}

    <a href="#" class="delete-task">Supprimer la t√¢che</a>

    {{ form_end(form) }}

{% endblock %}
